# Production environment settings
# Copy this file to .env for production deployment

# Server port
PORT=3000

# Strapi URL (updated for Strapi Cloud)
STRAPI_URL=https://api.cybercon.live

# Website Settings
SITE_NAME=CyberCon
SITE_DESCRIPTION=Podcast e eventi di cybersecurity in Italia - Oltre il perimetro
SITE_URL=https://cybercon.live

# Google Analytics ID (optional)
# GA_TRACKING_ID=UA-XXXXXXXXX-X

# Email configuration for contact form (optional)
# If configured, contact form will send emails directly instead of just storing in Strapi
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-password
# CONTACT_EMAIL=contact@cybercon.live

# Security settings
NODE_ENV=production
SESSION_SECRET=change-this-to-a-secure-random-string

# Cache settings (in minutes)
CACHE_DURATION=60
